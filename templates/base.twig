{% block html_head_container %}

  {% include 'html-header.twig' %}
  {% block head %}{% endblock %}
</head>
{% endblock %}

<body class="{{body_class}}" data-template="base.twig">
<div id="skiplinks">
  <a href="#content">{{__('Skip to Content', 'simple-grey')}}</a>
  <a href="#navigation">{{__('Skip to Navigation', 'simple-grey')}}</a>
  <a href="#footer">{{__( 'Skip to Footer', 'simple-grey' )}}</a>
</div>

<header id="masthead" class="site-header" role="banner">
  {% block header %}
    <div class="wrap">
      <div class="{{brand_classes|join(' ')}}">
        {% if logo %}
          <div class="{{logo_classes|join(' ')}}">
            <a href="{{ site.link }}" title="{{site.name}}" rel="home"><img src="{{logo.src|resize(108)}}" alt="{{site.name}}"></a>
          </div>
        {% endif %}
        <div class="site-info">
          <h1 class="site-title">
            <a href="{{ site.link }}" rel="home">{{site.name}}</a>
          </h1>
          <h2 class="site-description">{{ site.description }}</h2>
          {{ simple_grey_site_description }}
        </div>
        {% if menu %}
          <div id="menu-toggle" class="menu-toggle">
            <button aria-controls="menu" aria-expanded="false">
              <i class="fa fa-bars"></i>{{__( 'Menu', 'simple-grey' )}}</button>
          </div>
        {% endif %}
      </div>
      <!-- .site-branding -->
    </div>
  {% endblock %}
</header>
<!-- #masthead -->

{% if menu %}
  <!-- main menu -->
  <nav id="navigation" role="navigation">
    <div class="wrap">
      {% include "menu.twig" with {'menu': menu.get_items, 'depth': 0, 'classes': menu_classes, 'nav_style': nav_style} %}
    </div>
  </nav>
{% endif %}

<section id="content" role="main">
  <div class="wrap {{sidebar_class}}">
    <div class="row">
      {% block page_header %}
        {% if title %}
        <header class="page-header col">
          <h1 class="page-title">{{title}}</h1>
        </header><!-- .page-header -->
        {% endif %}
      {% endblock %}

      <main id="main" role="main">
        {% block content %}
					{% include ['content-none.twig'] %}
        {% endblock %}
      </main>
      {% block sidebar %}
      {% if sidebar %}
      <aside id="{{sidebar_id}}" class="widget-area" role="complementary">
      	<div class="sidebar-row">{{sidebar}}</div>
      </aside><!-- #secondary -->
      {% endif %}
      {% endblock %}
    </div>
  </div>
</section>

<footer id="footer" class="site-footer" role="contentinfo">
  {% block footer %}
    <div class="wrap">
      <div class="row">
        {% if footer_text_top %}
          <div class="footer-text">{{footer_text_top}}</div>
        {% endif %}

        {% if sidebar_footer %}
          <aside class="widget-area">
            {{sidebar_footer}}
          </aside>
        {% endif %}

        {% if footer_text_bottom or footer_credits %}
          <div class="footer-text">
            {% if footer_text_bottom %}
              <p>{{footer_text_bottom}}</p>
            {% endif %}

            {% if footer_credits %}
              {% set credit_wordpress = __( '<a href="%1$s" rel="generator">%2$s</a>', 'simple-grey')|format( 'http://wordpress.org/', 'WordPress' ) %}
              {% set credit_theme_link = __( '<a href="%1$s">%2$s</a>', 'simple-grey')|format( 'https://github.com/peterhebert/simple-grey-twig', __( 'Simple Grey', 'simple-grey' ) ) %}
              {% set credit_theme_author = __( '<a href="%1$s" rel="designer">%2$s</a>', 'simple-grey')|format( __( 'http://peterhebert.com/', 'simple-grey' ), __( 'Peter Hebert', 'simple-grey' ) ) %}
              <p>
                <i class="mv mv-wordpress icon-large"></i> {{ __( 'Proudly powered by %1$s. Theme: %2$s by %3$s.', 'simple-grey')|format( credit_wordpress, credit_theme_link, credit_theme_author ) }}
              </p>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  {% endblock %}
</footer>
<!-- #footer -->

{{ function('wp_footer') }}
</body>
</html>
