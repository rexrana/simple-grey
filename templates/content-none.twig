<section class="no-results not-found">
	<header class="page-header">
		<h1 class="page-title">{{__( 'Nothing Found', 'simple-grey' )}}</h1>
	</header><!-- .page-header -->
	<div class="page-content">
		{% if function("is_home") and current_user.can("publish_posts") %}
		{% set new_post_url = function('admin_url', 'post-new.php') %}
			{{ __('Ready to publish your first post? <a href="%s">Get started here</a>.', 'simple-grey')|format(new_post_url) }}
		{% elseif function("is_search") %}
			<p>{{__( 'Sorry, but nothing matched your search terms. Please try again with some different keywords.', 'simple-grey' ) }}</p>
			{{ function("get_search_form") }}
		{% else %}
			<p>{{__( 'It seems we can&rsquo;t find what you&rsquo;re looking for. Perhaps searching can help.', 'simple-grey' ) }}</p>
			{{ function("get_search_form") }}
		 {% endif %}
	</div><!-- .page-content -->
</section><!-- .no-results -->
